<h2>{{this.model.longName}}</h2>
<p>
  Total spaces: {{this.model.maxEntries}}<br>
  Competitors Registered: {{this.model.robotCount}}<br>
  Competitors Checked-in: {{this.model.robotCountCheckedIn}}<br>
  Spaces Unclaimed: {{this.model.unclaimedSpaces}}<br>
  Spaces Not Checked-in: {{this.model.uncheckedinSpaces}}<br>

  Measurment Start Time: {{moment-format this.model.registrationTime "LTS"}}<br>
  {{#link-to "robots.new" (query-params competition=this.model.name)}}New Entry{{/link-to}}<br><br>
  Filter by robot name:{{input value=this.robotFilter}}<br>
</p>
<table class="list">
  <tbody>
    <tr>
      <th>#</th>
      <th>Robot</th>
      <th>Competition</th>
      <th>School</th>
      <th>Driver</th>
      <th>Late</th>
      <th>Invoiced</th>
      <th>Paid</th>
      <th>Checked In</th>
      <th>Measured</th>
    </tr>

    {{#each this.filteredRobotsByName as |robot|}}
      <RobotListing
        @edit-link="robots.edit"
        @item={{robot}}
      />
    {{/each}}
  </tbody>
</table>
