<h2>Index</h2>
<div>
  <table>
    <tbody>
      <tr>
        <td colspan="2"><b>Filters:</b></td>
      </tr>
      <tr>
        <td>Robot Name:</td>
        <td>{{input value=robotFilter}}</td>
        <td>School:</td>
        <td>{{input value=schoolFilter}}</td>
        <td>ID:</td>
        <td>{{input value=robotIDFilter}}</td>
      </tr>
    </tbody>
  </table>
