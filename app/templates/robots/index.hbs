  <thead>
    <tr>
      <th>#</th>
      <th>Robot</th>
      <th>Competition</th>
      <th>School</th>
      <th>Driver</th>
      <th>Late</th>
      <th>Invoiced</th>
      <th>Paid</th>
      <th>Signed In</th>
      <th>Measured</th>
    </tr>
  </thead>
  <tbody>
    {{#each filteredRobots as |item|}}
      {{robot-listing edit-link="robots.edit" item=item}}
    {{/each}}
    <tr>
      <td><b>TOTAL:</b></td>
      <td></td>
      <td></td>
      <td></td>
      <td><b>{{invoicedTotal}}</b></td>
      <td><b>{{paidTotal}}</b></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>
