<tr>
  <td>Robot Name:</td>
  <td colspan="2">
    <ValidatedInput @changeset={{@changeset}} @propertyName="robot" />
  </td>
</tr>
<tr>
  <td>Competition:</td>
  <td>
    <select id="competition" {{on "change" this.updateCompetition}}>
      <option value="" selected={{eq this.changeset.competition.id ""}} disabled={{true}}>
        Select competition
      </option>
      {{#each @competitions as |c|}}
        <option value={{c.id}} selected={{eq @changeset.competition.id c.id}}>
          {{c.name}}
        </option>
      {{/each}}
    </select>
  </td>
</tr>
