<table class="list">
  <thead>
    <tr>
      <th>Robot</th>
      <th>School</th>
      <th>Driver</th>
      <th>Checked In</th>
      <th>Measured</th>
      <th>Paid</th>
    </tr>
  </thead>

  <tbody>
    {{#each @robots as |item|}}
      <tr class={{item.slottedStatus}}>
        <td>{{item.robot}}</td>
        <td>{{item.school}}</td>
        <td>{{item.driver1}}</td>
        <td class="centered">{{item.humanFriendlyStatus}}</td>
        <td class="centered">{{item.formattedMeasured}}</td>
        <td class="centered">{{item.paid}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
